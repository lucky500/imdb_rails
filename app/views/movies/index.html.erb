<h1 class="current-category"><%= params[:category] %></h1>

<% if @movies.count == 0 %>
  <h3>There is no current movies in that category.</h3>
<% else %>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-3">
        <a href="/movies/ <%= movie.id %>">
          <%= image_tag movie.movie_img.url(:medium), class: "movie" %>
        </a>
      </div>
    <% end %>
  </div>
<% end %>
