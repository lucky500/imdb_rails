<h3>Edit a new Movie:</h3>

<%= form_for @movie, html: {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.file_field :movie_img %>
    <%= f.select :category_id, @categories %>
    <%= f.text_field :title, required: true, placeholder: "Movie Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, required: true, placeholder: "Description", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_field :director, required: true, placeholder: "Director", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>